        <Grid HorizontalAlignment="Left" Height="357" Grid.Row="1" VerticalAlignment="Top" Width="149" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="1"/>
                <RowDefinition Height="Auto"/>
